generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id         Int @id @default(autoincrement())  
  name       String?
  username   String 
  email      String  @unique
  password   String
  blog       Blog[]
}
model Blog {
  id        Int    @id @default(autoincrement())
  authorid  Int    
  author    User   @relation(fields: [authorid], references: [id])
  content   String
  thumbnail String
  title     String
  published Boolean @default(false)
}