generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "postgres"]
}
model User{
  id Int @id @default(autoincrement())
  firstname String ?
  lastname  String ?
  username  String @unique
  password  String
  email     String

  @@schema("postgres")
}
model Todo{
  user_id     Int @id
  title       String 
  descreption String
  completed   Boolean @default(false)
  userid      Int 
  @@schema("postgres")
}
